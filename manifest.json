{
  "manifest_version": 3,
  "name": "Bankin+",
  "description": "Bankin unofficial premium addons",
  "version": "0.1",
  "author": "Remy Lefebvre",
  "icons": {
    "64": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.bankin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.bankin.com/*"
      ],
      "js": [
        "libs/chart.js",
        "libs/chartjs-adapter-date-fns.js",
        "injected.js"
      ]
    }
  ]
}
